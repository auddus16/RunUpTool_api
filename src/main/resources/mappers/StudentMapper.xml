<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.paas.runup.dao.StudentDAO"><!--namespace를 통해 DAO와 연결합니다. -->
  	<select id="findByEmail" resultType="com.paas.runup.dto.StudentDTO">
  		SELECT * FROM STUDENT WHERE S_EMAIL = #{s_email}
  	</select>
  		
  <select id="getStudentList" resultType="com.paas.runup.dto.StudentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며, 
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
  	SELECT * FROM STUDENT
  </select>
  
  <insert id="insertStudent">
  	INSERT INTO STUDENT(s_no,s_id,s_name,s_birth,s_gender,s_school,s_grade,s_class,s_password,s_email)
  	VALUES (#{s_no},#{s_id},#{s_name},#{s_birth},#{s_gender},#{s_school},#{s_grade},#{s_class},#{s_password},#{s_email})
  </insert>
  
  <update id="updateStudent">
  	UPDATE STUDENT 
  	SET s_id=#{s_id},s_name=#{s_name},s_birth=#{s_birth},s_gender=#{s_gender}, s_school=#{s_school}, s_grade=#{s_grade}, s_class=#{s_class}, s_password=#{s_password}, s_email=#{s_email}
  	WHERE s_no=#{s_no}
  </update>
  	
  <delete id="deleteStudent">
    DELETE FROM STUDENT WHERE s_no = #{s_no}
   </delete>

	<select id="getStudentByIDPW" resultType="com.paas.runup.dto.StudentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며, 
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
  	SELECT * 
  	FROM STUDENT
  	WHERE s_id = #{s_id} AND s_password=#{s_password}
  	
  </select>
  
  <select id="searchStudentID" resultType="com.paas.runup.dto.StudentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며, 
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
  	SELECT * 
  	FROM STUDENT
  	WHERE s_name = #{s_name} AND s_email=#{s_email}
  	
  </select>
  
  <select id="searchStudentPW" resultType="com.paas.runup.dto.StudentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며, 
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
  	SELECT * 
  	FROM STUDENT
  	WHERE s_name = #{s_name} AND s_id=#{s_id} AND s_email=#{s_email}
  	
  </select>
  
  <select id="updateStudentPW" resultType="com.paas.runup.dto.StudentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며, 
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
  	UPDATE STUDENT 
  	SET s_password=#{s_password}
  	WHERE s_no=#{s_no}
  	
  </select>
	
</mapper>